# Makefile para Jellyfin Organizer
# Sistema de Organiza√ß√£o Autom√°tica de Animes

# Vari√°veis de configura√ß√£o
PROJECT_NAME = jellyfin-organizer
VERSION = 2.0.0
INSTALL_DIR = /opt/anime-organizer
SERVICE_NAME = anime-organizer
CONFIG_FILE = config/default.conf
SYSTEMD_DIR = /etc/systemd/system
LOGROTATE_DIR = /etc/logrotate.d
BIN_DIR = /usr/local/bin

# Cores para output
RED = \033[0;31m
GREEN = \033[0;32m
YELLOW = \033[1;33m
BLUE = \033[0;34m
PURPLE = \033[0;35m
CYAN = \033[0;36m
NC = \033[0m

# Verificar se est√° sendo executado como root
define check_root
	@if [ "$$(id -u)" -eq 0 ]; then \
		echo "$(RED)‚ùå Este comando n√£o deve ser executado como root!$(NC)"; \
		echo "$(YELLOW)Execute como usu√°rio normal: make $1$(NC)"; \
		exit 1; \
	fi
endef

# Verificar se est√° sendo executado como usu√°rio normal
define check_user
	@if [ "$$(id -u)" -eq 0 ]; then \
		echo "$(RED)‚ùå Este comando deve ser executado como root!$(NC)"; \
		echo "$(YELLOW)Execute com sudo: sudo make $1$(NC)"; \
		exit 1; \
	fi
endef

# Verificar depend√™ncias
define check_deps
	@echo "$(BLUE)üîç Verificando depend√™ncias...$(NC)"
	@command -v python3 >/dev/null 2>&1 || { echo "$(RED)‚ùå Python 3 n√£o encontrado!$(NC)"; exit 1; }
	@command -v pip3 >/dev/null 2>&1 || { echo "$(RED)‚ùå pip3 n√£o encontrado!$(NC)"; exit 1; }
	@echo "$(GREEN)‚úÖ Depend√™ncias verificadas$(NC)"
endef

# Carregar configura√ß√µes
define load_config
	@if [ -f "$(CONFIG_FILE)" ]; then \
		. ./$(CONFIG_FILE); \
	else \
		echo "$(YELLOW)‚ö†Ô∏è  Arquivo de configura√ß√£o n√£o encontrado: $(CONFIG_FILE)$(NC)"; \
	fi
endef

.PHONY: help install uninstall start stop restart status logs test clean build deploy dev-setup check-config docker-build docker-run docker-stop docker-logs docker-deploy

# Comando padr√£o
help:
	@echo "$(BLUE)üé¨ Jellyfin Organizer - Sistema de Organiza√ß√£o Autom√°tica de Animes$(NC)"
	@echo "$(BLUE)================================================================$(NC)"
	@echo ""
	@echo "$(CYAN)Comandos dispon√≠veis:$(NC)"
	@echo "  $(GREEN)install$(NC)        - Instalar o sistema completo"
	@echo "  $(GREEN)uninstall$(NC)      - Desinstalar completamente"
	@echo "  $(GREEN)start$(NC)          - Iniciar o servi√ßo"
	@echo "  $(GREEN)stop$(NC)           - Parar o servi√ßo"
	@echo "  $(GREEN)restart$(NC)        - Reiniciar o servi√ßo"
	@echo "  $(GREEN)status$(NC)         - Ver status do servi√ßo"
	@echo "  $(GREEN)logs$(NC)           - Ver logs em tempo real"
	@echo "  $(GREEN)test$(NC)           - Executar testes"
	@echo "  $(GREEN)clean$(NC)          - Limpar arquivos tempor√°rios"
	@echo "  $(GREEN)build$(NC)          - Compilar/preparar arquivos"
	@echo "  $(GREEN)deploy$(NC)         - Deploy completo (install + start)"
	@echo "  $(GREEN)dev-setup$(NC)      - Configurar ambiente de desenvolvimento"
	@echo "  $(GREEN)check-config$(NC)   - Verificar configura√ß√£o"
	@echo ""
	@echo "$(CYAN)Comandos Docker:$(NC)"
	@echo "  $(GREEN)docker-build$(NC)   - Construir imagem Docker"
	@echo "  $(GREEN)docker-run$(NC)     - Executar com Docker"
	@echo "  $(GREEN)docker-stop$(NC)    - Parar container Docker"
	@echo "  $(GREEN)docker-logs$(NC)    - Ver logs do container"
	@echo "  $(GREEN)docker-deploy$(NC)  - Deploy completo com Docker"
	@echo ""
	@echo "$(CYAN)Exemplos:$(NC)"
	@echo "  make install         # Instalar sistema"
	@echo "  make deploy          # Deploy completo"
	@echo "  make docker-deploy   # Deploy com Docker"
	@echo "  make test            # Executar testes"
	@echo "  make logs            # Ver logs"
	@echo ""
	@echo "$(YELLOW)Vers√£o: $(VERSION)$(NC)"

# Verificar configura√ß√£o
check-config:
	@echo "$(BLUE)‚öôÔ∏è  Verificando configura√ß√£o...$(NC)"
	$(call load_config)
	@python3 src/config.py
	@echo "$(GREEN)‚úÖ Configura√ß√£o verificada$(NC)"

# Instalar depend√™ncias Python
install-deps:
	@echo "$(BLUE)üì¶ Instalando depend√™ncias Python...$(NC)"
	@pip3 install --user watchdog
	@echo "$(GREEN)‚úÖ Depend√™ncias instaladas$(NC)"

# Preparar diret√≥rios
prepare-dirs:
	@echo "$(BLUE)üìÅ Preparando diret√≥rios...$(NC)"
	@sudo mkdir -p $(INSTALL_DIR)
	@sudo mkdir -p $(INSTALL_DIR)/logs
	@sudo mkdir -p /var/log
	@echo "$(GREEN)‚úÖ Diret√≥rios preparados$(NC)"

# Copiar arquivos
copy-files:
	@echo "$(BLUE)üìã Copiando arquivos...$(NC)"
	@sudo cp src/*.py $(INSTALL_DIR)/
	@sudo cp scripts/* $(INSTALL_DIR)/
	@sudo cp config/default.conf $(INSTALL_DIR)/
	@sudo chmod +x $(INSTALL_DIR)/*.sh
	@sudo cp scripts/organize-anime.sh $(BIN_DIR)/organize-anime
	@sudo chmod +x $(BIN_DIR)/organize-anime
	@echo "$(GREEN)‚úÖ Arquivos copiados$(NC)"

# Configurar servi√ßo systemd
setup-service:
	@echo "$(BLUE)‚öôÔ∏è  Configurando servi√ßo systemd...$(NC)"
	@sudo cp config/$(SERVICE_NAME).service $(SYSTEMD_DIR)/
	@sudo systemctl daemon-reload
	@echo "$(GREEN)‚úÖ Servi√ßo configurado$(NC)"

# Configurar logrotate
setup-logrotate:
	@echo "$(BLUE)üìù Configurando rota√ß√£o de logs...$(NC)"
	@sudo tee $(LOGROTATE_DIR)/$(SERVICE_NAME) > /dev/null <<EOF
/var/log/$(SERVICE_NAME).log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 644 root root
    postrotate
        /bin/systemctl reload-or-restart $(SERVICE_NAME) > /dev/null 2>&1 || true
    endscript
}
EOF
	@echo "$(GREEN)‚úÖ Rota√ß√£o de logs configurada$(NC)"

# Organiza√ß√£o inicial
initial-organize:
	@echo "$(BLUE)üîÑ Executando organiza√ß√£o inicial...$(NC)"
	@sudo -u $$USER python3 $(INSTALL_DIR)/auto_organize_anime.py --organize-all || true
	@echo "$(GREEN)‚úÖ Organiza√ß√£o inicial conclu√≠da$(NC)"

# Instalar sistema completo
install: check-config
	$(call check_root,install)
	$(call check_deps)
	@echo "$(BLUE)üöÄ Iniciando instala√ß√£o do $(PROJECT_NAME) v$(VERSION)...$(NC)"
	@$(MAKE) install-deps
	@$(MAKE) prepare-dirs
	@$(MAKE) copy-files
	@$(MAKE) setup-service
	@$(MAKE) setup-logrotate
	@$(MAKE) initial-organize
	@echo "$(GREEN)üéâ Instala√ß√£o conclu√≠da com sucesso!$(NC)"
	@echo ""
	@echo "$(CYAN)üìã Pr√≥ximos passos:$(NC)"
	@echo "  1. Configure o qBittorrent:"
	@echo "     - Comando: $(INSTALL_DIR)/qbittorrent-completion.sh"
	@echo "     - Par√¢metros: %N %F"
	@echo "  2. Inicie o servi√ßo: make start"
	@echo "  3. Monitore os logs: make logs"

# Desinstalar sistema
uninstall:
	@echo "$(BLUE)üóëÔ∏è  Desinstalando $(PROJECT_NAME)...$(NC)"
	@$(MAKE) stop || true
	@sudo systemctl disable $(SERVICE_NAME) || true
	@sudo rm -f $(SYSTEMD_DIR)/$(SERVICE_NAME).service
	@sudo rm -f $(LOGROTATE_DIR)/$(SERVICE_NAME)
	@sudo rm -f $(BIN_DIR)/organize-anime
	@sudo rm -rf $(INSTALL_DIR)
	@sudo systemctl daemon-reload
	@echo "$(GREEN)‚úÖ Sistema desinstalado$(NC)"

# Iniciar servi√ßo
start:
	@echo "$(BLUE)üöÄ Iniciando servi√ßo...$(NC)"
	@sudo systemctl enable $(SERVICE_NAME)
	@sudo systemctl start $(SERVICE_NAME)
	@echo "$(GREEN)‚úÖ Servi√ßo iniciado$(NC)"

# Parar servi√ßo
stop:
	@echo "$(BLUE)üõë Parando servi√ßo...$(NC)"
	@sudo systemctl stop $(SERVICE_NAME)
	@echo "$(GREEN)‚úÖ Servi√ßo parado$(NC)"

# Reiniciar servi√ßo
restart:
	@echo "$(BLUE)üîÑ Reiniciando servi√ßo...$(NC)"
	@sudo systemctl restart $(SERVICE_NAME)
	@echo "$(GREEN)‚úÖ Servi√ßo reiniciado$(NC)"

# Ver status
status:
	@echo "$(BLUE)üìä Status do servi√ßo:$(NC)"
	@sudo systemctl status $(SERVICE_NAME) --no-pager

# Ver logs
logs:
	@echo "$(BLUE)üìã Logs do servi√ßo (Ctrl+C para sair):$(NC)"
	@sudo journalctl -u $(SERVICE_NAME) -f --no-pager

# Executar testes
test:
	@echo "$(BLUE)üß™ Executando testes...$(NC)"
	@python3 tests/teste_temporadas.py
	@echo "$(GREEN)‚úÖ Testes conclu√≠dos$(NC)"

# Limpar arquivos tempor√°rios
clean:
	@echo "$(BLUE)üßπ Limpando arquivos tempor√°rios...$(NC)"
	@find . -name "*.pyc" -delete
	@find . -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true
	@find . -name "*.log" -delete 2>/dev/null || true
	@find . -name "*.tmp" -delete 2>/dev/null || true
	@echo "$(GREEN)‚úÖ Limpeza conclu√≠da$(NC)"

# Preparar build
build:
	@echo "$(BLUE)üî® Preparando build...$(NC)"
	@$(MAKE) clean
	@$(MAKE) check-config
	@echo "$(GREEN)‚úÖ Build preparado$(NC)"

# Deploy completo
deploy: build install start
	@echo "$(BLUE)üöÄ Deploy completo realizado!$(NC)"
	@$(MAKE) status
	@echo ""
	@echo "$(GREEN)üéâ Sistema est√° funcionando!$(NC)"
	@echo "$(CYAN)Use 'make logs' para monitorar$(NC)"

# Configurar ambiente de desenvolvimento
dev-setup:
	@echo "$(BLUE)üõ†Ô∏è  Configurando ambiente de desenvolvimento...$(NC)"
	@$(MAKE) install-deps
	@$(MAKE) check-config
	@echo "$(GREEN)‚úÖ Ambiente de desenvolvimento configurado$(NC)"

# Backup da configura√ß√£o
backup:
	@echo "$(BLUE)üíæ Fazendo backup da configura√ß√£o...$(NC)"
	@sudo tar -czf /tmp/$(SERVICE_NAME)-backup-$$(date +%Y%m%d-%H%M%S).tar.gz $(INSTALL_DIR)
	@echo "$(GREEN)‚úÖ Backup criado em /tmp/$(NC)"

# Atualizar sistema
update: stop
	@echo "$(BLUE)üîÑ Atualizando sistema...$(NC)"
	@$(MAKE) copy-files
	@$(MAKE) start
	@echo "$(GREEN)‚úÖ Sistema atualizado$(NC)"

# Verificar sa√∫de do sistema
health:
	@echo "$(BLUE)üè• Verificando sa√∫de do sistema...$(NC)"
	@$(MAKE) status
	@echo ""
	@echo "$(BLUE)√öltimas 5 linhas do log:$(NC)"
	@sudo tail -n 5 /var/log/$(SERVICE_NAME).log 2>/dev/null || echo "$(YELLOW)Log n√£o encontrado$(NC)"
	@echo ""
	@echo "$(BLUE)Uso de disco:$(NC)"
	@df -h $(INSTALL_DIR) 2>/dev/null || echo "$(YELLOW)Diret√≥rio n√£o encontrado$(NC)"

# Informa√ß√µes do sistema
info:
	@echo "$(BLUE)‚ÑπÔ∏è  Informa√ß√µes do sistema:$(NC)"
	@echo "  Projeto: $(PROJECT_NAME)"
	@echo "  Vers√£o: $(VERSION)"
	@echo "  Diret√≥rio: $(INSTALL_DIR)"
	@echo "  Servi√ßo: $(SERVICE_NAME)"
	@echo "  Usu√°rio: $$(whoami)"
	@echo "  Sistema: $$(uname -a)"
	@echo "  Python: $$(python3 --version)"

# Validar instala√ß√£o
validate:
	@echo "$(BLUE)‚úÖ Validando instala√ß√£o...$(NC)"
	@test -d $(INSTALL_DIR) || { echo "$(RED)‚ùå Diret√≥rio n√£o encontrado$(NC)"; exit 1; }
	@test -f $(INSTALL_DIR)/auto_organize_anime.py || { echo "$(RED)‚ùå Script principal n√£o encontrado$(NC)"; exit 1; }
	@test -f $(BIN_DIR)/organize-anime || { echo "$(RED)‚ùå CLI n√£o encontrado$(NC)"; exit 1; }
	@systemctl is-enabled $(SERVICE_NAME) >/dev/null 2>&1 || { echo "$(RED)‚ùå Servi√ßo n√£o habilitado$(NC)"; exit 1; }
	@echo "$(GREEN)‚úÖ Instala√ß√£o v√°lida$(NC)"

# Comandos Docker
docker-build:
	@echo "$(BLUE)üê≥ Construindo imagem Docker...$(NC)"
	@docker build -t $(PROJECT_NAME):$(VERSION) -t $(PROJECT_NAME):latest .
	@echo "$(GREEN)‚úÖ Imagem Docker constru√≠da$(NC)"

docker-run:
	@echo "$(BLUE)üê≥ Executando container Docker...$(NC)"
	@docker-compose up -d
	@echo "$(GREEN)‚úÖ Container iniciado$(NC)"

docker-stop:
	@echo "$(BLUE)üê≥ Parando container Docker...$(NC)"
	@docker-compose down
	@echo "$(GREEN)‚úÖ Container parado$(NC)"

docker-logs:
	@echo "$(BLUE)üê≥ Logs do container Docker:$(NC)"
	@docker-compose logs -f $(PROJECT_NAME)

docker-deploy: docker-build docker-run
	@echo "$(BLUE)üê≥ Deploy Docker completo realizado!$(NC)"
	@$(MAKE) docker-logs

# Limpeza Docker
docker-clean:
	@echo "$(BLUE)üê≥ Limpando recursos Docker...$(NC)"
	@docker-compose down --volumes --remove-orphans
	@docker image prune -f
	@docker volume prune -f
	@echo "$(GREEN)‚úÖ Limpeza Docker conclu√≠da$(NC)"

# Build multi-arquitetura
docker-buildx:
	@echo "$(BLUE)üê≥ Construindo imagem multi-arquitetura...$(NC)"
	@docker buildx build --platform linux/amd64,linux/arm64 -t $(PROJECT_NAME):$(VERSION) -t $(PROJECT_NAME):latest .
	@echo "$(GREEN)‚úÖ Imagem multi-arquitetura constru√≠da$(NC)"
