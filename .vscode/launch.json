{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Monitor",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/monitor_downloads.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug Organizer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/auto_organize_anime.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "/path/to/test/file.mkv"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/teste_temporadas.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug Config",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/config.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}